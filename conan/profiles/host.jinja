include(default)

[settings]
compiler.cppstd=23
{% if os == "Macos" %}
# Conan Jinja execution context does not expose a generic 'env' mapping reliably; we pin a default.
# Override at CI by post-edit (sed) if a different apple-clang major is required.
compiler=apple-clang
compiler.version=17
compiler.libcxx=libc++
{% else %}
compiler=clang
compiler.version=19
compiler.libcxx=libstdc++11
{% endif %}

[conf]
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:compiler_executables={"c":"clang","cpp":"clang++"}