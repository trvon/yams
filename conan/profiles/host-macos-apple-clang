[settings]
os=Macos
arch=armv8
compiler=apple-clang
compiler.version=17
compiler.libcxx=libc++
compiler.cppstd=20
build_type=Release

[conf]
tools.cmake.cmaketoolchain:generator=Ninja
# apple-clang already implies libc++; no compiler_executables override needed.
# NOTE: If a transitive recipe injects -stdlib=libstdc++, the workflows now sanitize
# CXXFLAGS/LDFLAGS on macOS to enforce -stdlib=libc++ prior to invoking Conan.

[env]
# Enforce libc++ usage defensively. These append; Conan's toolchain will propagate them.
CXXFLAGS=-stdlib=libc++
CFLAGS=-stdlib=libc++
LDFLAGS=-stdlib=libc++

