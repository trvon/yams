[settings]
os=Linux
arch=x86_64
compiler=clang
compiler.version=18
compiler.libcxx=libstdc++11
compiler.cppstd=20
build_type=Release

[conf]
tools.cmake.cmaketoolchain:generator=Ninja
# Guarantee clang is used, not the c++ symlink pointing to gcc
tools.build:compiler_executables={"c":"clang","cpp":"clang++"}
