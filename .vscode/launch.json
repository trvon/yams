{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: yams-daemon (builddir - Repro GPU)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/builddir/src/daemon/yams-daemon",
      "args": [
        "--foreground",
        "--socket",
        "${input:yamsDaemonSocket}",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build (Debug)",
      "environment": [
        {
          "name": "YAMS_LOG_LEVEL",
          "value": "debug"
        },
        {
          "name": "YAMS_ONNX_FORCE_CPU",
          "value": "0"
        },
        {
          "name": "YAMS_DAEMON_SOCKET",
          "value": "${input:yamsDaemonSocket}"
        }
      ],
      "stopAtEntry": false,
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "program": "${workspaceFolder}\\builddir\\src\\daemon\\yams-daemon.exe"
      }
    },
    {
      "name": "Debug: yams-daemon (builddir - Control CPU)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/builddir/src/daemon/yams-daemon",
      "args": [
        "--foreground",
        "--socket",
        "${input:yamsDaemonSocket}",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build (Debug)",
      "environment": [
        {
          "name": "YAMS_LOG_LEVEL",
          "value": "debug"
        },
        {
          "name": "YAMS_ONNX_FORCE_CPU",
          "value": "1"
        },
        {
          "name": "YAMS_ONNX_DISABLE_GPU",
          "value": "1"
        },
        {
          "name": "YAMS_DAEMON_SOCKET",
          "value": "${input:yamsDaemonSocket}"
        }
      ],
      "stopAtEntry": false,
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "program": "${workspaceFolder}\\builddir\\src\\daemon\\yams-daemon.exe"
      }
    },
    {
      "name": "Attach: yams-daemon (LLDB)",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/builddir/src/daemon/yams-daemon",
      "processId": "${command:pickProcess}",
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "program": "${workspaceFolder}\\builddir\\src\\daemon\\yams-daemon.exe"
      }
    },
    {
      "name": "Debug: yams-cli (builddir)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/builddir/tools/yams-cli/yams-cli",
      "args": [
        "${input:yamsCliArguments}"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build (Debug)",
      "environment": [
        {
          "name": "YAMS_LOG_LEVEL",
          "value": "${input:yamsLogLevel}"
        },
        {
          "name": "YAMS_DAEMON_SOCKET",
          "value": "${input:yamsDaemonSocket}"
        }
      ],
      "stopAtEntry": false,
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "program": "${workspaceFolder}\\builddir\\tools\\yams-cli\\yams-cli.exe"
      }
    }
  ],
  "inputs": [
    {
      "id": "yamsLogLevel",
      "type": "pickString",
      "description": "Log level when starting YAMS processes",
      "options": [
        "trace",
        "debug",
        "info",
        "warn",
        "error"
      ],
      "default": "debug"
    },
    {
      "id": "yamsDaemonSocket",
      "type": "promptString",
      "description": "Daemon socket path used for debug sessions",
      "default": "/tmp/yams-daemon-debug.sock"
    },
    {
      "id": "yamsCliArguments",
      "type": "promptString",
      "description": "Arguments passed to yams-cli (leave empty to run without arguments)",
      "default": "status"
    }
  ]
}
