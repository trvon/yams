{
  "mcpServers": {
    "yams": {
      "command": "yams",
      "args": ["serve"],
      "env": {}
    },
    "yams-http": {
      "command": "yams",
      "args": ["serve"],
      "env": {
        "YAMS_MCP_HTTP_BIND": "127.0.0.1:8757"
      }
    },
    "yams-docker": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/username/.local/share/yams:/data",
        "-e",
        "YAMS_STORAGE=/data",
        "ghcr.io/trvon/yams:latest",
        "serve"
      ]
    }
  }
}
