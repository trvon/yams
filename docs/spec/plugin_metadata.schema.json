{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "yams-plugin-metadata",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "transport": {
      "enum": [
        "abi",
        "wasm",
        "external"
      ]
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "entry": {
      "type": "object",
      "properties": {
        "cmd": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "requires": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      },
      "required": [
        "cmd"
      ]
    }
  },
  "required": [
    "name",
    "version",
    "transport",
    "interfaces",
    "entry"
  ]
}