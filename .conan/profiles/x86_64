# Cross-compilation profile for x86_64 on Apple Silicon
[settings]
arch=x86_64
build_type=Release
compiler=apple-clang
compiler.cppstd=20
compiler.libcxx=libc++
compiler.version=17
os=Macos

[conf]
# Ensure we're building for x86_64
tools.cmake.cmaketoolchain:toolset_arch=x86_64

[buildenv]
# Set architecture flags for cross-compilation
CFLAGS=-arch x86_64
CXXFLAGS=-arch x86_64
LDFLAGS=-arch x86_64